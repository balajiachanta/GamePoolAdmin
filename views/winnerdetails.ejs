<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ././partials/adminhead %>
    </head>
<body>
    <header>
        <div class="container">
            <% include ././partials/adminjumbo %>
        </div>
    </header>
    <main>
        <div class="container">   
            <% include ././partials/adminnav %>
          <%- messages('winnerdetails', locals) %>
            <div id="messages">
              <% Object.keys(messages).forEach(function (type) { %>
                <!-- <% messages[type].forEach(function (message) { %> --><br/>
                  <div class="alert alert-<%= type %>"><%= message %></div>
                <!-- <% }) %> -->
              <% }) %>
            </div>
            <!-- <p class="text-right"><a href="/" class="btn btn-default" role="button">Home</a></p> -->
            <div style="padding-top:20px;"></div>
            <div class="row">
            <div class="col-md-8">
                <form action="/winner/details" method="post">
                <h2 class="page-header">Enter Winner Details</h2>

                <div class="form-group">
                        <label>Choose Match</label>
                        <select name="matchid" class="form-control" required>
                                <option value=></option>
                              <% for(var i=0; i < matches.length; i++) {%>
                                <option value=<%= matches[i].matchid %>><%= matches[i].gamedetails %></option>
                                <% } %>
                        </select>
                      </div>
             
                <div class="form-group">
                  <label>Winner Team</label>
                  <select name="teamid" class="form-control" required>
                        <option value=></option>
                      <% for(var i=0; i<teams.length; i++) {%>
                          <option value=<%= teams[i].teamid %>> <%= teams[i].name %></option>
                          <% } %>
                  </select>
                </div>

                <div class="form-group">
                  <label>Toss Winner</label>
                  <select name="tosteamid" class="form-control" required>
                        <option value=></option>
                      <% for(var i=0; i<teams.length; i++) {%>
                          <option value=<%= teams[i].teamid %>> <%= teams[i].name %></option>
                          <% } %>
                  </select>
                </div>
  
                <div class="form-group">
                    <label>Choose Player</label>
                    <select name="momplayerid" class="form-control" required>
                            <option value=></option>
                             <% for(var i=0; i<players.length; i++) {%>
                            <option value=<%= players[i].playerid %>><%= players[i].name %></option>
                            <% } %>
                    </select>
                </div>
                <div class="form-group">
                        <label>Highest Scorer</label>
                        <select name="hsplayerid" class="form-control" required>
                                <option value=></option>
                        <% for(var i=0; i<players.length; i++) {%>
                        <option value=<%= players[i].playerid %>><%= players[i].name %></option>
                        <% } %>
                        </select>
                    </div>
                <div class="form-group">
                    <label>Winner Team Score</label>
                    <input type="text" class="form-control" name="winnerscore" required>
                </div>
                
                    <button type="submit" class="btn btn-primary">Enter Winner Details</button><br/>
                </form>
            </div>
           
        </div>
        </div>
    </main>
    <footer>
        <% include ././partials/adminfooter %>
    </footer>
</body>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function($) {
        $("#winnerid").addClass("active");
          
      });
    </script>
</html>
