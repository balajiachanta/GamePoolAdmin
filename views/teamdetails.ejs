<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ././partials/adminhead %>
    </head>
  <body>
      <header>
          <div class="container">
              <% include ././partials/adminjumbo %>
          </div>
      </header>
      <main>
        <div class="container">  
          <% include ././partials/adminnav %>
       
          <%- messages('teamdetails', locals) %>
          <div id="messages">
              <% Object.keys(messages).forEach(function (type) { %>
                <!-- <% messages[type].forEach(function (message) { %> -->
                  <br/>
                  <div class="alert alert-<%= type %>"><%= message %></div>
                <!-- <% }) %> -->
              <% }) %>
              <!-- To show error on the page-->
              <% if(locals.errors) {%>
                <% for (const error of errors){ %>
                  <div class="alert alert-danger"><%= error.msg %></div>
                  
                  <% } %>
                
              <%}%>
          </div>      
          <div class="row">
            <div class="col-md-8">
               
              <form action="/team/details" method="post">
                <h2 class="page-header">Enter Team Details</h2>
                <div class="form-group">
                    <label>Team Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Team Name" required autofocus>
                  </div>

                  <div class="form-group">
                      <label>Logo Details</label>
                      <input type="text" name="logo" class="form-control" placeholder="Logo URL" required>
                  </div>

                  <div class="form-group">
                      <label>Home City</label>
                      <input type="text" name="homecity" class="form-control" placeholder="Home City" required>
                  </div>

                  <div class="form-group">
                      <label>Team Points</label>
                      <input type="text" name="points" class="form-control" placeholder="Points" required>
                  </div>

                  <button type="submit" class="btn btn-primary">Enter Details</button>
              </form>
            </div>
            <div class="col-md-4">
              <form action="/update/teampoints" method="post">
                  <h2 class="page-header">Update Team Points</h2>
                  <div class="form-group">
                      <label>Choose Team</label>
                      <select name="chooseteam" class="form-control" required>
                        
                        <% for(var i=0; i<teams.length; i++) {%>
                        <option value=<%= teams[i].teamid %>><%= teams[i].name %></option>
                        <% } %>
                      </select>
                   </div>
                 
                   <div class="form-group">
                      <label>EnterPoints</label>
                      <input type="text" name="points" class="form-control" placeholder="Enter Points" required>
                   </div>
                   <button type="submit" class="btn btn-primary">Update Team Points</button>
                </form>
             </div>
            </div> 
        
        </div> <!-- /container -->
      </main>
    <footer>
      <% include ././partials/adminfooter %>
    </footer>
  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script type="text/javascript">
  $(document).ready(function($) {
      $("#teamid").addClass("active");
        
    });
  </script>
</html>
