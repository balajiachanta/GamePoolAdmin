<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ././partials/adminhead %>
    </head>
<body>
    <header>
        <div class="container">
            <% include ././partials/adminjumbo %>
        </div>
    </header>
    <main>
        <div class="container">   
            <% include ././partials/adminnav %>
          <%- messages('matchdetails', locals) %>
            <div id="messages">
              <% Object.keys(messages).forEach(function (type) { %>
                <!-- <% messages[type].forEach(function (message) { %> -->
                    <br/>
                  <div class="alert alert-<%= type %>"><%= message %></div>
                <!-- <% }) %> -->
              <% }) %>
            </div>
            <!-- <p class="text-right"><a href="/" class="btn btn-default" role="button">Home</a></p> -->
            <div style="padding-top:20px;"></div>
            <div class="row">
            <div class="col-md-8">
                <form action="/player/details" method="post">
                <h2 class="page-header">Enter Player Details</h2>
              <div class="form-group">
                <label>Player Name</label>
                <input type="text" class="form-control" name="name" placeholder="Player Name" required autofocus>
              </div>
                <div class="form-group">
                  <label>Choose Team</label>
                  <select name="teamid" class="form-control" required>
                        <option value="">Choose Team</option>
                      <% for(var i=0; i<teams.length; i++) {%>
                          <option value=<%= teams[i].teamid %>><%= teams[i].name %></option>
                          <% } %>
                  </select>
                </div>
               
                <div class="form-group">
                  <label>Base Location</label>
                  <input type="text" class="form-control" name="city" placeholder="Base Location">
                </div>
                    <button type="submit" class="btn btn-primary">Enter Player Details</button><br/>
                </form>
            </div>
          
        </div>
        </div>
    </main>
    <footer>
        <% include ././partials/adminfooter %>
    </footer>
</body>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function($) {
        $("#playerid").addClass("active");
      });
    </script>
</html>
